<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.play.mapper.PlayerMapper">
    <update id="updateStatus">
        UPDATE users
        SET status = #{status}
        WHERE id = #{playerId}
    </update>
    <select id="getPlayerStatus" resultType="com.play.dto.PlayerStatus">
        SELECT status
        FROM users
        WHERE id = {playerId}
    </select>
</mapper>